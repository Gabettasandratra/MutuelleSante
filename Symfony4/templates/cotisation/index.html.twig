{% extends 'base.html.twig' %}

{% block title %}Fiches de cotisation{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('assets/libs/datatable/dist/dataTables.bootstrap4.css') }}" rel="stylesheet">
{% endblock %}

{% block header %}
    <div class="page-breadcrumb">
        <div class="d-flex align-items-center">
            <h4 class="page-title text-truncate text-dark font-weight-medium mb-0">Liste des congrégations adhérées</h4>
            <div class="ml-auto">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb m-0 p-0">
                        <li class="breadcrumb-item text-muted active" aria-current="page">Cotisation</li>
                        <li class="breadcrumb-item text-muted" aria-current="page">Liste</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Choisissez la congrégation parmi la liste</h4>
                    <hr>
                    <div class="table-responsive">
                        <table id="zero_config" class="table border">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">Num</th>
                                    <th scope="col">Nom congrégation</th>
                                    <th scope="col">Adresse</th>
                                    <th scope="col">Cotisation</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for adherent in adherents %}
                                    <tr>
                                        <th>{{ adherent.numero }}</th>
                                        <td>{{ adherent.nom }}</td>
                                        <td>{{ adherent.adresse }}</td>
                                        {% if adherent.isPaye %}
                                            <td><span class="label label-rounded label-success">Payé</span></td>
                                        {% else %}
                                            <td><span class="label label-rounded label-warning">Non payé</span></td>
                                        {% endif %}
                                        <td>
                                            <a href="{{ path('cotisation_show', {'id': adherent.id}) }}"class="label btn-primary label-primary">Voir fiche</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('assets/libs/datatable/dist/jquery.dataTables.min.js') }}"></script>
<script src="{{ asset('dist/js/pages/datatable/datatable-basic.init.js') }}"></script>
{% endblock %}