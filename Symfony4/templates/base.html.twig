    <script src="{{ asset('dist/js/bootstrap-datepicker.min.js') }}"></script>
    <script src="{{ asset('dist/js/datepicker.js') }}"></script>
    <script>
        $('.datepicker').datepicker({
            language: 'fr',
            orientation: "bottom",
            format: "dd/mm/yyyy",
            autoclose: true,
            dateFormat: "dd/mm/yyyy",
            minDate: new Date('{{ app.session.get('exercice').dateDebut|date('d/m/Y') }}'),
            maxDate: new Date('{{ app.session.get('exercice').dateFin|date('d/m/Y') }}')
        });
    </script>

    {% block javascripts %}{% endblock %}

    <script>
        $('[data-toggle="tooltip"]').tooltip();
        $(".preloader").fadeOut();
    </script>
