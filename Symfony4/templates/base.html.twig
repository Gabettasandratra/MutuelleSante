                    </div>
                    <!-- ============================================================== -->
                    <!-- End Logo -->
                    <!-- ============================================================== -->
                    <div class="navbar-collapse collapse" id="navbarSupportedContent" data-navbarbg="skin5">
                        <!-- ============================================================== -->
                        <!-- toggle and nav items -->
                        <!-- ============================================================== -->
                        <ul class="navbar-nav float-left mr-auto">
                            
                        </ul>
                        <!-- ============================================================== -->
                        <!-- Right side toggle and nav items -->
                        <!-- ============================================================== -->
                        <ul class="navbar-nav float-right">
                            {% if app.user %} 
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-muted waves-effect waves-dark pro-pic" href="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img src="{{ asset(app.user.photo) }}" alt="user" class="rounded-circle" width="35" style="background-color: white;"></a>
                                    <div class="dropdown-menu dropdown-menu-right user-dd animated">
                                        <a class="dropdown-item" href="{{ path('user_profile', {id: app.user.id}) }}"><i class="fa fa-user m-r-5 m-l-5"></i> Mon Profil</a>
                                        <a class="dropdown-item" href="{{ path('app_logout') }}"><i class="fa fa-power-off m-r-5 m-l-5"></i> Se deconnecter</a>
                                    </div>
                                </li>     
                            {% endif %} 
                            
                        </ul>
                    </div>
                </nav>
            </header>
            <!-- ============================================================== -->
            <!-- End Topbar header -->
            <!-- ============================================================== -->
        {% endblock %}

        
        <!-- ============================================================== -->
        <!-- Left Sidebar - style you can find in sidebar.scss  -->
        <!-- ============================================================== -->
        <aside class="left-sidebar" data-sidebarbg="skin6">
            <!-- Sidebar scroll-->
            <div class="scroll-sidebar">
                <!-- Sidebar navigation-->
                <nav class="sidebar-nav">
                    <ul id="sidebarnav">
                        <li>
                            <!-- User Profile-->
                            <div class="user-profile d-flex no-block dropdown m-t-20">
                                <div class="user-pic"><img src="{{ asset(app.user.photo) }}" alt="users" class="rounded-circle" width="40" /></div>
                                <div class="user-content hide-menu m-l-10">
                                    <a href="javascript:void(0)" class="" id="Userdd" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <h5 class="m-b-0 user-name font-medium">{{ app.user.username }} <i class="fa fa-angle-down"></i></h5>
                                        <span class="op-5 user-email">{{ app.user.fonction|title }}</span>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="Userdd">
                                        <a class="dropdown-item" href="{{ path('user_profile', {id: app.user.id}) }}"><i class="ti-user m-r-5 m-l-5"></i> Mon Profil</a>
                                        <a class="dropdown-item" href="javascript:void(0)"><i class="ti-wallet m-r-5 m-l-5"></i> My Balance</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="javascript:void(0)"><i class="ti-settings m-r-5 m-l-5"></i> Account Setting</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="{{ path('app_logout') }}"><i class="fa fa-power-off m-r-5 m-l-5"></i> Se deconnecter</a>
                                    </div>
                                </div>
                            </div>
                            <!-- End User Profile-->
                        </li>

                        {% block sidebarMenu %}
                        <li class="sidebar-item"> <a class="sidebar-link waves-effect waves-dark sidebar-link" href="{{ path('dashboard') }}"><i class="mdi mdi-view-dashboard"></i><span class="hide-menu"> Tableau de bord</span></a></li>
                        {% if is_granted('ROLE_GESTIONNAIRE') %}
                            <li class="nav-small-cap"><span class="hide-menu">Gestion mutuelle</span></li>
                            <li class="sidebar-item"> 
                                <a class="sidebar-link has-arrow" href="javascript:void(0)" aria-expanded="false"><i class="mdi mdi-account-multiple"></i><span class="hide-menu"> Adhesion </span></a>
                                <ul aria-expanded="false" class="pl-2 collapse first-level">
                                    {% if app.session.get('exercice') and app.session.get('exercice').isCurrent and not app.session.get('exercice').isCloture %}
                                    <li class="sidebar-item waves-effect waves-dark"><a href="{{ path('adhesion_new') }}" class="sidebar-link"><i class="mdi mdi-account-plus"></i><span class="hide-menu"> Inscrire congrégation </span></a></li>
                                    {% endif %}
                                    <li class="sidebar-item waves-effect waves-dark"><a href="{{ path('adhesion') }}" class="sidebar-link"><i class="mdi mdi-account-search"></i><span class="hide-menu"> Fiche d'adhésion </span></a></li>
                                    <li class="sidebar-item waves-effect waves-dark"><a href="{{ path('adhesion_beneficiaires') }}" class="sidebar-link"><i class="mdi mdi-format-list-bulleted"></i><span class="hide-menu"> Liste béneficiaires </span></a></li>
                                    <li class="sidebar-item waves-effect waves-dark"><a href="{{ path('export_rapport_adhesions') }}" class="sidebar-link"><i class="mdi mdi-newspaper"></i><span class="hide-menu"> Rapport d'adhésion </span></a></li>
                                </ul>
                            </li>
                        
                            <li class="sidebar-item"> 
                                <a class="sidebar-link has-arrow" href="javascript:void(0)" aria-expanded="false"><i class="mdi mdi-calculator"></i><span class="hide-menu"> Cotisation </span></a>
                                <ul aria-expanded="false" class="pl-2 collapse first-level">
                                    <li class="sidebar-item waves-effect waves-dark"><a href="{{ path('cotisation') }}" class="sidebar-link"><i class="mdi mdi-calendar-check"></i><span class="hide-menu"> Fiche de cotistation </span></a></li>
                                    <li class="sidebar-item waves-effect waves-dark"><a href="{{ path('export_rapport_cotisations') }}" class="sidebar-link"><i class="mdi mdi-newspaper"></i><span class="hide-menu"> Rapport de cotisation </span></a></li>
                                </ul>
                            </li>
                            <li class="sidebar-item"> 
                                <a class="sidebar-link has-arrow" href="javascript:void(0)" aria-expanded="false"><i class="mdi mdi-security-home"></i><span class="hide-menu"> Prestation </span></a>
                                <ul aria-expanded="false" class="pl-2 collapse first-level">
                                    <li class="sidebar-item waves-effect waves-dark"><a href="{{ path('prestation') }}" class="sidebar-link"><i class="mdi mdi-verified"></i><span class="hide-menu"> Prestation béneficiaire </span></a></li>
                                    <li class="sidebar-item waves-effect waves-dark"><a href="{{ path('prestation_adherent') }}" class="sidebar-link"><i class="mdi mdi-clipboard-outline"></i><span class="hide-menu"> Fiche de prestation</span></a></li>
                                    <li class="sidebar-item waves-effect waves-dark"><a href="{{ path('export_rapport_prestations') }}" class="sidebar-link"><i class="mdi mdi-newspaper"></i><span class="hide-menu"> Rapport de prestation </span></a></li>
                                </ul>
                            </li>
                        {% endif %}
                        {% if is_granted('ROLE_COMPTABLE') %}
                            <li class="nav-small-cap"><span class="hide-menu">Gestion fincancière</span></li>
                            <li class="sidebar-item"> 
                                <a class="sidebar-link has-arrow" href="javascript:void(0)" aria-expanded="false"><i class="mdi mdi-keyboard"></i><span class="hide-menu"> Saisie des écritures </span></a>
                                <ul aria-expanded="false" class="pl-2 collapse first-level">
                                    <li class="sidebar-item waves-effect waves-dark"><a href="#modal-journaux" data-toggle="modal" data-backdrop="static" class="sidebar-link"><i class="mdi mdi-pen"></i><span class="hide-menu"> Saisie des écritures </span></a></li>
                                    <li class="sidebar-item waves-effect waves-dark"><a href="{{ path('comptabilite_plan') }}" class="sidebar-link"><i class="mdi mdi-view-list"></i><span class="hide-menu"> Plan comptable </span></a></li>
                                    <li class="sidebar-item waves-effect waves-dark"><a href="{{ path('tresorerie') }}" class="sidebar-link"><i class="mdi mdi-bank"></i><span class="hide-menu"> Trésorerie</span></a></li>                                
                                </ul>
                            </li>
                            <li class="sidebar-item"> 
                                <a class="sidebar-link has-arrow" href="javascript:void(0)" aria-expanded="false"><i class="mdi mdi-cash-multiple"></i><span class="hide-menu"> Etats comptables </span></a>
                                <ul aria-expanded="false" class="pl-2 collapse first-level">
                                    <li class="sidebar-item waves-effect waves-dark"><a href="#modal-journaux" data-toggle="modal" data-backdrop="static" class="sidebar-link"><i class="mdi mdi-clipboard-outline"></i><span class="hide-menu"> Journal </span></a></li>
                                    <li class="sidebar-item waves-effect waves-dark"><a href="#modal-livre" data-toggle="modal" data-backdrop="static" class="sidebar-link"><i class="mdi mdi-book-open-page-variant"></i><span class="hide-menu"> Grand livre </span></a></li>
                                    <li class="sidebar-item waves-effect waves-dark"><a href="{{ path('comptabilite_balance') }}" class="sidebar-link"><i class="mdi mdi-scale-balance"></i><span class="hide-menu"> Balance </span></a></li>
