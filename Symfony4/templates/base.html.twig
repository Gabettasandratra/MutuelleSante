                                </ul>
                            </li>
            
                        {% endif %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-small-cap"><span class="hide-menu">Paramètres</span></li>
                            <li class="sidebar-item"> 
                                <a class="sidebar-link has-arrow" href="javascript:void(0)" aria-expanded="false"><i class="mdi mdi-account-box"></i><span class="hide-menu"> Utilisateur </span></a>
                                <ul aria-expanded="false" class="pl-2 collapse first-level">
                                    <li class="sidebar-item waves-effect waves-dark"><a href="{{ path('user_profile', {id: app.user.id}) }}" class="sidebar-link"><i class="mdi mdi-account"></i><span class="hide-menu"> Profile utilisateur </span></a></li>
                                    <li class="sidebar-item waves-effect waves-dark"><a href="{{ path('user_all') }}" class="sidebar-link"><i class="mdi mdi-account-multiple"></i><span class="hide-menu"> Tous les utilisateurs </span></a></li>
                                </ul>
                            </li>
                            <li class="sidebar-item  mb-5"> 
                                <a class="sidebar-link has-arrow" href="javascript:void(0)" aria-expanded="false"><i class="mdi mdi-settings"></i><span class="hide-menu"> Configuration </span></a>
                                <ul aria-expanded="false" class="pl-2 collapse first-level">
                                    <li class="sidebar-item waves-effect waves-dark"><a href="{{ path('parametre_mutuelle') }}" class="sidebar-link"><i class="mdi mdi-settings"></i><span class="hide-menu"> Mutuelle</span></a></li>
                                    <li class="sidebar-item waves-effect waves-dark"><a href="{{ path('parametre_exercice') }}" class="sidebar-link"><i class="mdi mdi-settings"></i><span class="hide-menu"> Exercice</span></a></li>
                                </ul>
                            </li>
                        {% endif %}
                        {% endblock %}
                    </ul>
                    
                </nav>
                <!-- End Sidebar navigation -->
            </div>
            <!-- End Sidebar scroll-->
        </aside>
        <!-- ============================================================== -->
        <!-- End Left Sidebar - style you can find in sidebar.scss  -->
        <!-- ============================================================== -->
        {{ render(controller('App\\Controller\\ComptabiliteController::renderModalJournal')) }}
