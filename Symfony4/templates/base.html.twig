                                <!-- Dark Logo icon -->
                                <img src="{{ asset('assets/images/logo-icon.png') }}" alt="homepage" class="dark-logo" />
                                <!-- Light Logo icon -->
                                <img src="{{ asset('assets/images/logo-light-icon.png') }}" alt="homepage" class="light-logo" />
                            </b>
                            <!--End Logo icon -->
                            <!-- Logo text -->
                            <span class="logo-text">
                                <!-- dark Logo text -->
                                <img src="{{ asset('uploads/img/mutuelle-3.png') }}" alt="homepage" class="dark-logo" />
                                <!-- Light Logo text -->    
                                <img src="{{ asset('uploads/img/mutuelle-light-3.png') }}" class="light-logo" alt="homepage" />
                            </span>
                        </a>
                       
