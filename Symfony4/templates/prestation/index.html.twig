{% extends 'base.html.twig' %}

{% block title %}Saisir prestation{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('assets/libs/datatable/dist/dataTables.bootstrap4.css') }}" rel="stylesheet">
{% endblock %}

{% block header %}
    <div class="page-breadcrumb">
        <div class="d-flex align-items-center">
            <h4 class="page-title text-truncate text-dark font-weight-medium mb-0">Liste des béneficaires inscrits</h4>
            <div class="ml-auto">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb m-0 p-0">
                        <li class="breadcrumb-item text-muted active" aria-current="page">Prestation</li>
                        <li class="breadcrumb-item text-muted" aria-current="page">Liste</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Choisissez le béneficiaire parmi la liste</h4>
                    <hr>
                    <div class="table-responsive">
                        <table id="order" class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Congrégation</th>
                                    <th scope="col">N°code</th>
                                    <th scope="col">Nom et prénom</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% set row = 1 %}
                                {% for pac in pacs %}
                                    {% if not pac.isSortie %}
                                        <tr>
                                            <th scope="row">{{ row }} {% set row = row + 1 %}</th>
                                            <td>{{ pac.adherent.nom }}</td>
                                            <td>{{ pac.codeMutuelle }}</td>
                                            <td>{{ pac.nom }} {{ pac.prenom }}</td>

                                            {% if pac.adherent.possedeDroit %}
                                                <td><span class="label label-rounded label-success">Droit au préstation</span></td>
                                                <td>
                                                    <a href="{{ path('prestation_beneficiaire', {'id': pac.id}) }}"class="label  label-rounded btn-primary label-primary">Selectionner</a>
                                                </td>
                                            {% else %}
                                                <td><span class="label label-rounded label-warning">Pas de droit au préstation</span></td>
                                                <td>
                                                    <span class="label label-rounded btn-secondary label-secondary disabled">Selectionner</span>
                                                </td>
                                            {% endif %}
                                        </tr> 
                                    {% endif %}                                       
                                 
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('assets/libs/datatable/dist/jquery.dataTables.min.js') }}"></script>
<script src="{{ asset('dist/js/pages/datatable/datatable-basic.init.js') }}"></script>
{% endblock %}