{% extends 'base.html.twig' %}

{% block title %}Prestations consommées{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('assets/libs/datatable/dist/dataTables.bootstrap4.css') }}" rel="stylesheet">
{% endblock %}

{% block header %}
    <div class="page-breadcrumb">
        <div class="d-flex align-items-center">
            <h4 class="page-title text-truncate text-dark font-weight-medium mb-0">Prestations consommées par {{ pac.nom ~ ' ' ~ pac.prenom }} </h4>
            <div class="ml-auto">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb m-0 p-0">
                        <li class="breadcrumb-item text-muted active" aria-current="page">Prestation</li>
                        <li class="breadcrumb-item text-muted" aria-current="page">Saisie</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">    
                    <h4 class="card-title">Bénéficiaire</h4>
                    <hr>
                    <div class="row">
                        <div class="col-md-6 border-right">
                            <div class="row">
                                <div class="col-md-12">
                                    <ul class="list-style-none">     
                                        <li class="my-3">
                                            <img src="{{ asset(pac.photo) }}" alt="profile" class="img-thumbnail mx-auto d-block" height="150" width="150">
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <ul class="list-style-none border-bottom-white">
                                        <li class="my-3 ">
                                            <span class="font-weight-medium text-dark"> Congrégation:</span>
                                        </li>
                                        <li class="my-3">
                                            <span class="font-weight-medium text-dark"> Nom et prénom:</span>
                                        </li>
                                        <li class="my-3">
                                            <span class="font-weight-medium text-dark"> N° Matricule:</span>
                                        </li>
                                        <li class="my-3">
                                            <span class="font-weight-medium text-dark"> Date d'entrée:</span>
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-md-8">
                                    <ul class="list-style-none">
                                        <li class="my-3 border-bottom">
                                            <span> {{ pac.adherent.nom }} </span>
                                        </li>
                                        <li class="my-3 border-bottom">
                                            <span> {{ pac.nom ~ ' ' ~ pac.prenom }} </span>
                                        </li>
                                        <li class="my-3 border-bottom">
                                            <span> {{ pac.adherent.numero ~ ' / ' ~ pac.codeMutuelle }}</span>
                                        </li>
                                        <li class="my-3 border-bottom">
                                            <span> {{ pac.dateEntrer | date('d / m / Y') }}</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>                           
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-8">
                            <h4 class="card-title">Liste des prestations consommées</h4>
                        </div>
                        <div class="col-4">
                            <div class="text-right">
                                <a href="{{ path('prestation_beneficiare_add', {'id' : pac.id}) }}" class="btn btn-sm btn-info"><i class="mdi mdi-hospital"></i> Ajouter prestation</a>
                            </div> 
                        </div>
                    </div>
                    <hr>
                    <div class="table-responsive">
                        <table class="table" id="zero_config">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Actes de soins</th>
                                    <th scope="col">N° facture</th>
                                    <th scope="col">Montant depensé</th>
                                    <th scope="col">Montant remboursé</th>
                                    <th scope="col">% remboursé</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">1</th>
                                    <td>14 / 06 / 2020</td>
                                    <td>Soins dentaire</td>
                                    <td>12</td>
                                    <td>40000</td>
                                    <td>20000</td>
                                    <td>50 %</td>
                                </tr>
                                <tr>
                                    <th scope="row">2</th>
                                    <td>28 / 06 / 2020</td>
                                    <td>Lunetterie</td>
                                    <td>783</td>
                                    <td>50000</td>
                                    <td>15000</td>
                                    <td>30 %</td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th scope="row" colspan=4 >Total</th>
                                    <td id="dep">90000</td>
                                    <td id="rem">35000</td>
                                    <td>38,8 %</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/libs/datatable/dist/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('dist/js/pages/datatable/datatable-basic.init.js') }}"></script>
{% endblock %}