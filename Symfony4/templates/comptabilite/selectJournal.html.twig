{% extends 'base.html.twig' %}

{% block title %}Les journaux comptables{% endblock %}

{% block header %}
    <div class="page-breadcrumb">
        <div class="d-flex align-items-center">
            <h4 class="page-title text-truncate text-dark font-weight-medium mb-0">Selection de journaux comptables</h4>
            <div class="ml-auto">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb m-0 p-0">
                        <li class="breadcrumb-item text-muted active" aria-current="page">Comptabilité</li>
                        <li class="breadcrumb-item text-muted" aria-current="page">Journal</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">

            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Journaux comptables</h4>
                    <hr>
                    <div class="feed-widget">
                        <ul class="list-style-none feed-body m-0 p-b-20">
                            <li class="p-1"><a href="{{ path('comptabilite_journal') }}"> Journal géneral </a></li>
                            {% for code in codes %}
                            <li class="p-1"><a href="{{ path('comptabilite_journal', { journal: code.codeJournal }) }}"> Journal {{ code.titre }} </a></li> 
                            {% endfor %}
                            
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
