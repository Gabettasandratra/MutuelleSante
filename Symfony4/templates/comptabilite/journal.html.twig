{% extends 'base.html.twig' %}

{% block title %}
    Journal {{ journal.titre }}
{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('assets/libs/datatable/dist/dataTables.bootstrap4.css') }}" rel="stylesheet">
{% endblock %}

{% block header %}
    <div class="page-breadcrumb">
        <div class="d-flex align-items-center">
            <h4 class="page-title text-truncate text-dark font-weight-medium mb-0">Journal comptable</h4>
            <div class="ml-auto">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb m-0 p-0">
                        <li class="breadcrumb-item text-muted active" aria-current="page">Comptabilité</li>
                        <li class="breadcrumb-item text-muted" aria-current="page">Journal</li>
                        <li class="breadcrumb-item text-muted" aria-current="page">{{ journal.codeJournal }}</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Journal {{ journal.titre }}</h4>
                    <hr>                           
                    <div class="row">
                        <div class="col-md-12 table-responsive">
                            <table class="table" id="scroll_no_order">
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col">Date</th>
                                        <th scope="col">N° article</th>
                                        <th scope="col">Libellé écriture</th>
                                        <th scope="col">Montant</th>
                                        <th scope="col">Réference</th>
                                        <th scope="col">Compte débité</th>
                                        <th scope="col">Compte crédité</th>
                                        <th scope="col">Compte analytique</th>
                                        {% if journal.codeJournal and not app.session.get('exercice').isCloture %}
                                        <th scope="col">Action</th>
                                        {% else %}
                                        <th scope="col">Journal</th> 
                                        {% endif %}
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for article in articles %}                                
                                        <tr>
                                            <td>{{ article.date |date('d/m/Y') }}</td>
                                            <td>{{ article.id }}</td>
                                            <td>{{ article.libelle }}</td>
                                            <td>{{ article.montant|number_format(2,',',' ') }}</td>
                                            <td>{{ article.piece }}</td>
                                            <td title="{{ article.compteDebit.titre }}" data-toggle="tooltip">{{ article.compteDebit.poste }}</td>
                                            <td title="{{ article.compteCredit.titre }}" data-toggle="tooltip">{{ article.compteCredit.poste }}</td>
                                            <td>{{ article.analytique }}</td>
                                            {% if journal.codeJournal and not app.session.get('exercice').isCloture %}
                                            <td>{% if article.isFerme %}<span class="label label-rounded btn-secondary label-secondary disabled">Modifier</span>{% else %}<a href="{{ path('comptabilite_modifier_article', {'id': article.id, 'journal': article.categorie}) }}" class="label label-rounded btn-primary label-primary">Modifier</a>{% endif %}</td>
                                            {% else %}
                                            <th scope="col">{{article.categorie}}</th>
                                            {% endif %}
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-12 text-right">
                            {% if journal.codeJournal and not app.session.get('exercice').isCloture %}           
                            <a href="{{ path('comptabilite_saisie', { 'journal': journal.codeJournal }) }}" class="btn btn-success"><i class="mdi mdi-receipt"></i> Saisie écriture comptable</a>
                            {% endif %}
                            <a href="{{ path('export_rapport_journal', {code: journal.codeJournal}) }}" class="btn btn-info"><i class="mdi mdi-printer"></i> Exporter</a>
                            <a href="{{ path('comptabilite_select_journal') }}" class="btn btn-secondary"><i class="mdi mdi-close-circle-outline"></i> Fermer</a>
                        </div>
                    </div>
                
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/libs/datatable/dist/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('dist/js/pages/datatable/datatable-basic.init.js') }}"></script>
{% endblock %}