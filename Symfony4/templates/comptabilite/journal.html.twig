{% extends 'base.html.twig' %}

{% block title %}
    Journal {{ journal }}s
{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('assets/libs/datatable/dist/dataTables.bootstrap4.css') }}" rel="stylesheet">
{% endblock %}

{% block header %}
    <div class="page-breadcrumb">
        <div class="d-flex align-items-center">
            <h4 class="page-title text-truncate text-dark font-weight-medium mb-0">Journaux comptables</h4>
            <div class="ml-auto">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb m-0 p-0">
                        <li class="breadcrumb-item text-muted active" aria-current="page">Comptabilité</li>
                        <li class="breadcrumb-item text-muted" aria-current="page">Journal</li>
                        <li class="breadcrumb-item text-muted" aria-current="page">{{ journal |title }}</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Journal {{ journal }}</h4>
                    <hr>                           
                    <div class="row">
                        <div class="col-md-12 table-responsive">
                            <table class="table" id="zero_config">
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Date</th>
                                        <th scope="col">N° article</th>
                                        <th scope="col">Libellé écriture</th>
                                        <th scope="col">Montant</th>
                                        <th scope="col">Réference</th>
                                        <th scope="col">Compte débité</th>
                                        <th scope="col">Compte crédité</th>
                                        <th scope="col">Compte analytique</th>
                                        {% if journal == 'divers' %}           
                                        <th scope="col">Action</th>
                                        {% endif %}
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for article in articles %}                                
                                        <tr>
                                            <th scope="col">{{ loop.index }}</th>
                                            <td>{{ article.date |date('d/m/Y') }}</td>
                                            <td>{{ article.id }}</td>
                                            <td>{{ article.libelle }}</td>
                                            <td>{{ article.montant }}</td>
                                            <td>{{ article.piece }}</td>
                                            <td title="{{ article.compteDebit.titre }}" data-toggle="tooltip">{{ article.compteDebit.poste }}</td>
                                            <td title="{{ article.compteCredit.titre }}" data-toggle="tooltip">{{ article.compteCredit.poste }}</td>
                                            <td>{{ article.analytique }}</td>
                                            {% if journal == 'divers' %}           
                                            <td>{% if article.isFerme %}<span class="label label-rounded btn-secondary label-secondary disabled">Modifier</span>{% else %}<a href="{{ path('comptabilite_modifier_article', {'id': article.id, 'journal': article.categorie}) }}" class="label btn-primary label-primary">Modifier</a>{% endif %}</td>
                                            {% endif %}
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    {% if journal == 'divers' %}           
                        <div class="row mt-4">
                            <div class="col-md-12 text-right">
                                <a href="{{ path('comptabilite_saisie', { 'journal': journal }) }}" class="btn btn-success">Saisie écriture comptable</a>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/libs/datatable/dist/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('dist/js/pages/datatable/datatable-basic.init.js') }}"></script>
{% endblock %}