{% extends 'base.html.twig' %}

{% block title %}
    Journal
{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('assets/libs/datatable/dist/dataTables.bootstrap4.css') }}" rel="stylesheet">
{% endblock %}

{% block header %}
    <div class="page-breadcrumb">
        <div class="d-flex align-items-center">
            <h4 class="page-title text-truncate text-dark font-weight-medium mb-0">Journal</h4>
            <div class="ml-auto">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb m-0 p-0">
                        <li class="breadcrumb-item text-muted active" aria-current="page">Comptabilité</li>
                        <li class="breadcrumb-item text-muted" aria-current="page">Journal</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    {% include "comptabilite/reportHeader.html.twig" with {
                        title: "Journal", 
                        subtitle: code.codeJournal|upper ~" "~ code.titre|capitalize,
                        periode: periode,
                    } %}

                    <hr>                           
                    <div class="row">
                        <table class="table table-hover border no-padding" id="zero_config">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col" style="width: 5%">Date</th>
                                    <th scope="col" style="width: 2%">N°</th>
                                    <th scope="col" style="width: 5%">Débité</th>
                                    <th scope="col" style="width: 5%">Crédité</th>
                                    <th scope="col" style="width: 35%">Libellé</th>
                                    <th scope="col" style="width: 15%">Montant</th>
                                    <th scope="col" style="width: 15%">Réference</th>
                                    <th scope="col" style="width: 15%">Dest</th>
                                    {% if  not app.session.get('exercice').isCloture %}
                                    <th scope="col" style="width: 1%">Act</th>
                                    {% endif %}
                                </tr>
                            </thead>
                            <tbody>
                                {% for article in articles %}                                
                                    <tr>
                                        <td>{{ article.date |date('d/m/y') }}</td>
                                        <td>{{ article.id }}</td>
                                        <td title="{{ article.compteDebit.titre }}" data-toggle="tooltip">{{ article.compteDebit.poste }}</td>
                                        <td title="{{ article.compteCredit.titre }}" data-toggle="tooltip">{{ article.compteCredit.poste }}</td>
                                        <td>{{ article.libelle }}</td>
                                        <td>{{ article.montant|number_format(2,',',' ') }}</td>
                                        <td>{{ article.piece }}</td>
                                        <td>{{ article.analytique }}</td>
                                        {% if not app.session.get('exercice').isCloture %}
                                        <td>{% if not article.isFerme %}<a href="{{ path('comptabilite_saisie_edit',{'id': article.id}) }}" class="label btn-primary label-primary"><i class="mdi mdi-grease-pencil"></i></a>
                                            {% else %}<span class="label label-warning"><i class="mdi mdi-lock"></i></span>{% endif %}
                                        </td>
                                        {% endif %}
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <div class="row mt-2 btn-group">
                        <a href="{{ path('export_rapport_journal') }}" class="btn btn-sm btn-success"><i class="mdi mdi-printer"></i> Excel</a>
                        <a href="{{ path('pdf_journal', { code: code.codeJournal, debut: periode['debut']|date('dmY'), fin: periode['fin']|date('dmY')}) }}" class="btn btn-sm btn-secondary"><i class="mdi mdi-printer"></i> PDF</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
<script src="{{ asset('assets/libs/datatable/dist/jquery.dataTables.min.js') }}"></script>
<script src="{{ asset('dist/js/pages/datatable/datatable-basic.init.js') }}"></script>
{% endblock %}