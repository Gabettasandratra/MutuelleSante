{% extends 'base.html.twig' %}

{% block title %}Balances des comptes{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('assets/libs/datatable/dist/dataTables.bootstrap4.css') }}" rel="stylesheet">
{% endblock %}

{% block header %}
    <div class="page-breadcrumb">
        <div class="d-flex align-items-center">
            <h4 class="page-title text-truncate text-dark font-weight-medium mb-0">Balance des comptes</h4>
            <div class="ml-auto">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb m-0 p-0">
                        <li class="breadcrumb-item text-muted active" aria-current="page">Comptabilité</li>
                        <li class="breadcrumb-item text-muted" aria-current="page">Balance</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Balance des comptes</h4>
                    <hr>                           
                    <div class="table-responsive-lg">
                        <table class="table table-bordered">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">Poste</th>
                                    <th scope="col">Intitulé de compte</th>
                                    <th scope="col">Débit</th>
                                    <th scope="col">Credit</th>
                                    <th scope="col">Solde</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for classe, comptes in donnees %}
                                    <tr><th colspan=4 class="table-active">{{ classe }}</th></tr>
                                    {% set debit = 0 %} {% set credit = 0 %} {% set solde = 0 %}
                                    {% for compte in comptes %}
                                        <tr>
                                            <td>{{ compte.poste }}</td>
                                            <td>{{ compte.titre }}</td>
                                            <td>{{ compte.debit|number_format(2,',',' ') }}</td> {% set debit = debit + compte.debit %}
                                            <td>{{ compte.credit|number_format(2,',',' ') }}</td> {% set credit = credit + compte.credit %}
                                            <td>{{ compte.solde|number_format(2,',',' ') }}</td> {% set solde = solde + compte.solde %}
                                        </tr>                                        
                                    {% endfor %}
                                    <tr>
                                        <th colspan=2 class="text-right">TOTAL : {{ classe }}</th>
                                        <td>{{ debit|number_format(2,',',' ') }}</td>
                                        <td>{{ credit|number_format(2,',',' ') }}</td>
                                        <td>{{ solde|number_format(2,',',' ') }}</td>
                                    </tr>
                                {% endfor %}        
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/libs/datatable/dist/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('dist/js/pages/datatable/datatable-basic.init.js') }}"></script>
{% endblock %}