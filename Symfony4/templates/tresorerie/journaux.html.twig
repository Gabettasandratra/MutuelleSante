{% extends 'base.html.twig' %}

{% block title %}Codes journaux{% endblock %}

{% block header %}
    <div class="page-breadcrumb">
        <div class="d-flex align-items-center">
            <h4 class="page-title text-truncate text-dark font-weight-medium mb-0">Codes journaux</h4>
            <div class="ml-auto">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb m-0 p-0">
                        <li class="breadcrumb-item text-muted active" aria-current="page">Comptabilité</li>
                        <li class="breadcrumb-item text-muted" aria-current="page">Structure</li>
                        <li class="breadcrumb-item text-muted" aria-current="page">Codes journaux</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Gestion des codes journaux</h4>
                    <hr>
                    <div class="row">
                        <div class="col-md-7 col-sm-12 table-responsive">
                            <table class="table table-bordered no-padding">
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col">Type</th>
                                        <th scope="col">Code</th>
                                        <th scope="col">Intitulé du journal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for j in journaux %}
                                        <tr>
                                            <th scope="row">{{ j.type }}</th>
                                            <td>{{ j.code }}</td>
                                            <td>{{ j.intitule }}</td>                                            
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-5 col-sm-12">
                          <form method="post">
                            <div class="form-group">
                              <label for="exampleFormControlSelect1">Type</label>
                              <select class="form-control" required="required" name="j_type" id="exampleFormControlSelect1">
                                <option value="Achats">Achats</option>
                                <option value="Ventes">Ventes</option>
                                <option value="Opérations diverses">Opérations diverses</option>
                              </select>
                            </div>
                            <div class="form-group">
                              <label for="formGroupExampleInput">Code</label>
                              <input type="text" name="j_code" class="form-control" id="formGroupExampleInput" required="required">
                            </div>
                            <div class="form-group">
                              <label for="formGroupExampleInput2">Intitulé</label>
                              <input type="text" name="j_intitule" class="form-control" id="formGroupExampleInput2" required="required">
                            </div>
                            <div class="form-group">
                              <button class="btn btn-info" type="submit">Ajouter</button>
                            </div>
                          </form>
                        </div>
                    </div>     
                </div>
            </div>
        </div>
    </div>
{% endblock %}