{% extends 'base.html.twig' %}

{% block title %}Gestion de trésorerie{% endblock %}

{% block header %}
    <div class="page-breadcrumb">
        <div class="d-flex align-items-center">
            <h4 class="page-title text-truncate text-dark font-weight-medium mb-0">Gestion de trésorerie</h4>
            <div class="ml-auto">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb m-0 p-0">
                        <li class="breadcrumb-item text-muted active" aria-current="page">Trésorerie</li>
                        <li class="breadcrumb-item text-muted" aria-current="page">Gestion</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Ajouter nouveau compte de trésorerie</h4>
                    <hr>
                    <div class="row">
                        <div class="col-6">
                            {{ form_start(form) }}
                                {{ form_row(form.poste, { 'label': 'N° du compte :', 'attr' : { 'placeholder' : '5...' } }) }} 
                                {{ form_row(form.titre, { 'label': 'Intitulé du compte :' }) }}
                                {{ form_row(form.libelle, { 'label': 'Libellé en mode de paiement :' }) }}
                                {{ form_row(form.note, { 'label': 'Notes :' }) }}
                                <div class="form-row">
                                    <div class="col-12 text-right">
                                        <button type="submit" class="btn btn-success">Ajouter <i class="mdi mdi-keyboard-return"></i></button>
                                    </div>
                                </div>                                                     
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}