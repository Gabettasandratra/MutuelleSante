{% extends 'base.html.twig' %}

{% block title %}Les rapports d'adhésion{% endblock %}

{% block header %}
    <div class="page-breadcrumb">
        <div class="d-flex align-items-center">
            <h4 class="page-title text-truncate text-dark font-weight-medium mb-0">Rapport d'adhésion</h4>
            <div class="ml-auto">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb m-0 p-0">
                        <li class="breadcrumb-item text-muted active" aria-current="page">Adhésion</li>
                        <li class="breadcrumb-item text-muted" aria-current="page">Rapport</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Liste des rapports</h4>
                    <hr>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="list-group list-group-flush">
                                <a href="#modal-adhesion" data-toggle="modal" class="list-group-item">Liste des congrégations adhérées</a>
                                <a class="list-group-item">Liste des bénéficiaires</a>
                                <a class="list-group-item">Liste des bénéficiaires retirés</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modal-adhesion" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Rapport d'adhésion</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form id="prestation" action="">
                    <div class="modal-body">
                        <div class="row">                                                  
                            <div class="col-12">
                                    <div class="form-group row">
                                        <label for="rapport_date_deb" class="col-form-label col-sm-6 required">Date d'adhésion entre</label>
                                        <div class="col-sm-6">
                                            <input type="text" id="rapport_date_deb" name="rapport[date_deb]" autocomplete="off" required="required" class="form-control datepicker" auto-fill="false">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="rapport_date_fin" class="col-form-label col-sm-6 required">Au</label>
                                        <div class="col-sm-6">
                                            <input type="text" id="rapport_date_fin" name="rapport[date_fin]" autocomplete="off" required="required" class="form-control datepicker" auto-fill="false">
                                        </div>
                                    </div>
                                    
                                    <div class="form-row btn-list">
                                        <div class="col-12 text-right">
                                            <button type="reset" class="btn btn-danger mr-3" data-dismiss="modal" id="fermer"><i class="mdi mdi-close-circle-outline"></i> Fermer</button>
                                            <button type="submit" class="btn btn-info" id="Ajouter"><i class="mdi mdi-login-variant"></i> Ajouter</button>
                                        </div>
                                    </div>
                                </form>
                            </div>                       
                        </div>
                    </div>
            </div>
        </div>
    </div>
{% endblock %}
