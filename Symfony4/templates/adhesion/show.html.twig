{% extends 'base.html.twig' %}

{% block title %}Fiche d'adhésion N°{{ adherent.id }}{% endblock %}

{% block header %}
    <div class="page-breadcrumb">
        <div class="d-flex align-items-center">
            <h4 class="page-title text-truncate text-dark font-weight-medium mb-0">Fiche d'adhésion N°{{ adherent.id }}</h4>
            <div class="ml-auto">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb m-0 p-0">
                        <li class="breadcrumb-item text-muted active" aria-current="page">Adhésion</li>
                        <li class="breadcrumb-item text-muted" aria-current="page">Fiche</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Adhérent</h4>
                    <hr>
                    <div class="row">
                        <div class="col-md-2">
                            <ul class="list-style-none">
                                <li class="my-3 ">
                                    <span class="font-weight-medium text-dark"> Nom et prénom:</span>
                                </li>
                                <li class="my-3 ">
                                    <span class="font-weight-medium text-dark"> Date de naissance:</span>
                                </li>
                                <li class="my-3 ">
                                    <span class="font-weight-medium text-dark"> Adresse:</span>
                                </li>
                                <li class="my-3 ">
                                    <span class="font-weight-medium text-dark"> Profession:</span>
                                </li>
                                <li class="my-3 ">
                                    <span class="font-weight-medium text-dark"> Numéro téléphone:</span>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-4 border-right">
                            <ul class="list-style-none">
                                <li class="my-3 border-bottom">
                                    <span> {{ adherent.nom }} {{ adherent.prenom }}</span>
                                </li>
                                <li class="my-3 border-bottom">
                                    <span> {{ adherent.dateNaissance | date('d / m / Y') }}</span>
                                </li>
                                <li class="my-3 border-bottom">
                                    <span> {{ adherent.adresse }}</span>
                                </li>
                                <li class="my-3 border-bottom">
                                    <span> {{ adherent.profession }}</span>
                                </li>
                                <li class="my-3 border-bottom">
                                    <span> {{ adherent.telephone1 }} {% if adherent.telephone2 %}/ {{ adherent.telephone2 }}{% endif %}</span>
                                </li>
                            </ul>
                        </div>

                        <div class="col-md-2">
                            <ul class="list-style-none">
                                <li class="my-3">
                                    <span class="font-weight-medium text-dark"> Numéro de code:</span>
                                </li>
                                <li class="my-3">
                                    <span class="font-weight-medium text-dark"> Date d'entrée:</span>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-4">
                            <ul class="list-style-none">
                                <li class="my-3 border-bottom">
                                    <span> {{ adherent.codeMutuelle }} </span>
                                </li>
                                <li class="my-3 border-bottom">
                                    <span> {{ adherent.dateInscription | date('d / m / Y') }}</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}