{% extends 'base.html.twig' %}

{% block title %}Liste des béneficiaires Retirés{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('assets/libs/datatable/dist/dataTables.bootstrap4.css') }}" rel="stylesheet">
{% endblock %}

{% block header %}
    <div class="page-breadcrumb">
        <div class="d-flex align-items-center">
            <h4 class="page-title text-truncate text-dark font-weight-medium mb-0">Liste des béneficiaires retirés</h4>
            <div class="ml-auto">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb m-0 p-0">
                        <li class="breadcrumb-item text-muted active" aria-current="page">Adhésion</li>
                        <li class="breadcrumb-item text-muted" aria-current="page">Béneficiaires</li>
                        <li class="breadcrumb-item text-muted" aria-current="page">Retirés</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Liste des béneficiaires retirés</h4>
                    <hr>
                    <div class="table-responsive">
                        <table id="order" class="table border">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Congrégation</th>
                                    <th scope="col">N° Matricule</th>
                                    <th scope="col">Nom et prénom</th>
                                    <th scope="col">Date de sortie</th>
                                    <th scope="col">Remarque</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% set row = 1 %}
                                {% for pac in pacs %}                
                                    <tr>
                                        <th scope="row">{{ row }} {% set row = row + 1 %}</th>
                                        <td>{{ pac.adherent.nom }}</td>
                                        <td>{{ pac.adherent.numero }} / {{ pac.codeMutuelle }}</td>
                                        <td>{{ pac.nom }} {{ pac.prenom }}</td>
                                        <td>{{ pac.dateSortie | date('d / m / Y') }}</td>
                                        <td>{{ pac.remarque }}</td>
                                        <td>
                                            <a href="{{ path('adhesion_beneficiaires_integre', {'id': pac.id}) }}" class="label btn-primary label-primary">Re-Ajouter</a>
                                        </td>
                                    </tr> 
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('assets/libs/datatable/dist/jquery.dataTables.min.js') }}"></script>
<script src="{{ asset('dist/js/pages/datatable/datatable-basic.init.js') }}"></script>
{% endblock %}