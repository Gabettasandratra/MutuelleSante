{% extends 'base.html.twig' %}

{% block title %}
    {% if editMode is defined and editMode == true %}
        Modifier personne à charge
    {% else %}
        Ajouter personne à charge
    {% endif %} 
{% endblock %}

{% block header %}
    {% if editMode is defined and editMode == true %}
        <div class="page-breadcrumb">
            <div class="d-flex align-items-center">
                <h4 class="page-title text-truncate text-dark font-weight-medium mb-0">Modifier personne à charge de la fiche d'adhésion N°{{ adherent.id }}</h4>
                <div class="ml-auto">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb m-0 p-0">
                            <li class="breadcrumb-item text-muted active" aria-current="page">Adhésion</li>
                            <li class="breadcrumb-item text-muted" aria-current="page">Modification personne à charge</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    {% else %} 
        <div class="page-breadcrumb">
            <div class="d-flex align-items-center">
                <h4 class="page-title text-truncate text-dark font-weight-medium mb-0">Ajouter personne à charge de l'adherent N°{{ adherent.id }}</h4>
                <div class="ml-auto">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb m-0 p-0">
                            <li class="breadcrumb-item text-muted active" aria-current="page">Adhésion</li>
                            <li class="breadcrumb-item text-muted" aria-current="page">Ajout personne à charge</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    {% if editMode is defined and editMode == true %}
                        <h4 class="card-title">Personne à charge N°{{ pac.codeMutuelle }}</h4>
                    {% else %}
                        <h4 class="card-title">Formulaire d'ajout de personne à charge</h4>
                    {% endif %}
                    <hr>
                    <div class="row">
                        <div class="col-6">
                            {{ form_start(form) }}
                                {{ form_widget(form) }}
                                {% if editMode is defined and editMode == true %}
                                    <button type="submit" class="btn btn-success">Enregistrer les modifications</button>
                                {% else %}
                                    <button type="submit" class="btn btn-success">Ajouter</button>
                                {% endif %}                                     
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
