{% extends 'base.html.twig' %}

{% block title %}
    {% if editMode is defined and editMode == true %}
        Modifier béneficiaire
    {% else %}
        Ajouter béneficiaire
    {% endif %} 
{% endblock %}

{% block header %}
    {% if editMode is defined and editMode == true %}
        <div class="page-breadcrumb">
            <div class="d-flex align-items-center">
                <h4 class="page-title text-truncate text-dark font-weight-medium mb-0">Modifier béneficiaire de la fiche d'adhésion N°{{ adherent.id }}</h4>
                <div class="ml-auto">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb m-0 p-0">
                            <li class="breadcrumb-item text-muted active" aria-current="page">Adhésion</li>
                            <li class="breadcrumb-item text-muted" aria-current="page">Modification béneficiaire</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    {% else %} 
        <div class="page-breadcrumb">
            <div class="d-flex align-items-center">
                <h4 class="page-title text-truncate text-dark font-weight-medium mb-0">Ajouter béneficiaire de la congrégation N°{{ adherent.id }} / {{ adherent.nom }}</h4>
                <div class="ml-auto">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb m-0 p-0">
                            <li class="breadcrumb-item text-muted active" aria-current="page">Adhésion</li>
                            <li class="breadcrumb-item text-muted" aria-current="page">Ajout béneficiaire</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    {% if editMode is defined and editMode == true %}
                        <h4 class="card-title">Béneficiaire N°{{ pac.codeMutuelle }}</h4>
                    {% else %}
                        <h4 class="card-title">Formulaire d'ajout de béneficiaire</h4>
                    {% endif %}
                    <hr>
                    <div class="row">
                        <div class="col-6">
                            {{ form_start(form) }}
                                {{ form_row(form.codeMutuelle, { 'label': 'Numero Matricule:' }) }}                        
                                {{ form_row(form.nom, { 'label': 'Nom:' }) }}                        
                                {{ form_row(form.prenom, { 'label': 'Prenom:' }) }}                        
                                {{ form_row(form.sexe, { 'label': 'Genre:' }) }}                        
                                {{ form_row(form.dateNaissance, { 'label': 'Date de naissance:' }) }}                        
                                {{ form_row(form.cin, { 'label': 'Numero CIN:' }) }}                        
                                {{ form_row(form.tel, { 'label': 'Numero tel:' }) }}     
                                {{ form_row(form.parente, { 'label': 'Rôle dans la congrégation:' }) }}                                           
                                {{ form_row(form.dateEntrer, { 'label': 'Date d\'entrer dans la mutuelle:' }) }}                                           
                                {{ form_row(form.photo, { 'label': 'Photo d\'identité:' }) }}                                           
                                {% if editMode is defined and editMode == true %}
                                    <button type="submit" class="btn btn-success">Enregistrer les modifications</button>
                                {% else %}
                                    <button type="submit" class="btn btn-success">Ajouter</button>
                                {% endif %}                                     
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
