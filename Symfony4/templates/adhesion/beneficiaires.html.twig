{% extends 'base.html.twig' %}

{% block title %}Liste des béneficiaires{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('assets/libs/datatable/dist/dataTables.bootstrap4.css') }}" rel="stylesheet">
{% endblock %}

{% block header %}
    <div class="page-breadcrumb">
        <div class="d-flex align-items-center">
            <h4 class="page-title text-truncate text-dark font-weight-medium mb-0">Liste des béneficiaires</h4>
            <div class="ml-auto">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb m-0 p-0">
                        <li class="breadcrumb-item text-muted active" aria-current="page">Adhésion</li>
                        <li class="breadcrumb-item text-muted" aria-current="page">Béneficiaires</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Liste des béneficiaires actifs</h4>
                    <hr>
                    <div class="table-responsive">
                        <table id="order" class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Congrégation</th>
                                    <th scope="col">N° Matricule</th>
                                    <th scope="col">Nom et prénom</th>
                                    <th scope="col">Date de naissance</th>
                                    <th scope="col">Date d'entrée</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% set row = 1 %}
                                {% for adherent in adherents %}
                                    {% for pac in adherent.pacs %}
                                        {% if not pac.isSortie %}
                                            <tr>
                                                <th scope="row">{{ row }} {% set row = row + 1 %}</th>
                                                <td>{{ adherent.nom }}</td>
                                                <td>{{ adherent.numero }} / {{ pac.codeMutuelle }}</td>
                                                <td>{{ pac.nom }} {{ pac.prenom }}</td>
                                                <td>{{ pac.dateNaissance | date('d / m / Y') }}</td>
                                                <td>{{ pac.dateEntrer | date('d / m / Y') }}</td>
                                            </tr> 
                                        {% endif %}                                       
                                    {% endfor %}
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row mt-4">
                        <div class="col-5">
                            <h4 class="card-title">Liste des béneficiaires retirés</h4>
                        </div>
                        <div class="col-7">
                            <div class="text-right">
                                <a href="{{ path('adhesion_beneficiaires_retires') }}" class="btn btn-sm btn-primary"><i class="mdi mdi-account-plus"></i> Acceder</a>
                            </div> 
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('assets/libs/datatable/dist/jquery.dataTables.min.js') }}"></script>
<script src="{{ asset('dist/js/pages/datatable/datatable-basic.init.js') }}"></script>
{% endblock %}